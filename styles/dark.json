{
  "version": 2,
  "customTemplates": [
    {
      "name": "two_column",
      "title": "Two Column Layout",
      "postTypes": ["page", "post"]
    },
    {
      "name": "single-recipe",
      "title": "Single Recipe",
      "postTypes": ["recipe"]
    },
    {
      "name": "single-movies",
      "title": "Single Movies",
      "postTypes": ["movies"]
    }
  ],
  "settings": {
	"appearanceTools": true,
    "color": {
      "palette": [
        {
          "slug": "foreground",
          "color": "#efefef",
          "name": "Foreground"
        },
        {
          "slug": "background",
          "color": "#000000",
          "name": "Background"
        },
        {
          "slug": "primary",
          "color": "#1a4548",
          "name": "Primary"
        },
        {
          "slug": "secondary",
          "color": "#ffe2c7",
          "name": "Secondary"
        },
        {
          "slug": "tertiary",
          "color": "#F6F6F6",
          "name": "Tertiary"
        }
      ]
    },
    "spacing": {
      "units": ["%", "px", "em", "rem", "vh", "vw"]
    },
    "typography": {
      "lineHeight": "1.5rem;",
      "dropCap": false,
      "fontFamilies": [
        {
          "fontFamily": "Lato, sans-serif",
          "name": "Lato",
          "slug": "lato"
        },
        {
          "fontFamily": "Roboto Slab, serif",
          "name": "Roboto Slab",
          "slug": "roboto-slab"
        },
        {
          "fontFamily": "Poppins, sans-serif",
          "name": "Poppins",
          "slug": "poppins"
        }
      ],
      "fontSizes": [
        {
          "size": "1rem",
          "slug": "small"
        },
        {
          "size": "1.125rem",
          "slug": "medium"
        },
        {
          "size": "1.75rem",
          "slug": "large"
        },
        {
          "size": "clamp(1.75rem, 3vw, 2.25rem)",
          "slug": "x-large"
        }
      ]
    },
    "layout": {
      "contentSize": "960px",
      "wideSize": "1400px"
    }
  },
  "styles": {
    "spacing": {
			"blockGap": "1.5rem"
		},
    "blocks": {
      "core/post-title": {
        "typography": {
          "fontFamily": "Roboto Slab, sans-serif",
          "fontWeight": "400",
          "lineHeight": "var(--wp--custom--typography--line-height--tiny)",
          "fontSize": "36px"
        }
      },
      "core/paragraph": {
        "typography": {
          "fontFamily": "Lato, sans-serif",
          "fontWeight": "400",
          "lineHeight": "var(--wp--custom--typography--line-height--tiny)",
          "fontSize": "18px"
        }
      },
      "core/list": {
        "typography": {
          "fontFamily": "Lato, sans-serif",
          "fontWeight": "400",
          "lineHeight": "var(--wp--custom--typography--line-height--tiny)",
          "fontSize": "18px"
        }
      }
    },
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--foreground)"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "Roboto Slab, sans-serif",
          "fontWeight": "300",
          "lineHeight": "2em",
          "fontSize": "24px"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "Roboto Slab, sans-serif",
          "fontWeight": "400",
          "lineHeight": "2em",
          "fontSize": "24px"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "Roboto Slab, sans-serif",
          "fontWeight": "400",
          "lineHeight": "2em",
          "fontSize": "24px",
          "marginBottom": "36px"
        }
      },
      "h4": {
        "typography": {
          "fontFamily": "Roboto Slab, sans-serif",
          "fontWeight": "400",
          "lineHeight": "var(--wp--custom--typography--line-height--tiny)",
          "fontSize": "var(--wp--preset--font-size--x-large)"
        }
      },
      "h5": {
        "typography": {
          "fontFamily": "Roboto Slab, sans-serif",
          "fontWeight": "700",
          "textTransform": "uppercase",
          "lineHeight": "var(--wp--custom--typography--line-height--normal)",
          "fontSize": "var(--wp--preset--font-size--medium)"
        }
      },
      "h6": {
        "typography": {
          "fontFamily": "Roboto Slab, sans-serif",
          "fontWeight": "400",
          "textTransform": "uppercase",
          "lineHeight": "var(--wp--custom--typography--line-height--normal)",
          "fontSize": "var(--wp--preset--font-size--medium)"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--foreground)"
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ]
}
